@model Stagio.Web.ViewModels.Stage.ListAllStages

@{
    ViewBag.Title = "List";
}

<h2 id="listNewStages-page">Liste des stages qui ne sont pas encore approuvés</h2>
<div id="stages-count">@(Model.ListNewStages.Count()+ Model.ListStagesAccepted.Count() + Model.ListStagesRefused.Count()) Stage(s)</div>
                     
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ListNewStages[0].PublicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListNewStages[0].CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListNewStages[0].Adresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListNewStages[0].NbrStagiaire)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ListNewStages) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbrStagiaire)
            </td>
            <td>
                @Html.ActionLink("Détails", "Details", new { id = item.Id }, new { id = "details-stages" + item.Id }) |
            </td>
        </tr>
    }

</table>

