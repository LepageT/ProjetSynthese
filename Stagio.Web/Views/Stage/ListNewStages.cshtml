            @Html.DisplayNameFor(model => model.ListNewStages[0].CompanyName)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.ListNewStages[0].NbrStagiaire)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.ListNewStages[0].PublicationDate)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.ListNewStages[0].LimitDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ListNewStages)
    {
        <tr>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.StageTitle)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.NbrStagiaire)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.LimitDate)
            </td>
            <td>
                @Html.ActionLink("Détails", "Details", new { id = item.Id }, new { id = "details-stages" + item.Id })
            </td>
        </tr>
    }

</table>

