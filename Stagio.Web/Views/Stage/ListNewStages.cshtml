@model IEnumerable<Stagio.Web.ViewModels.Stage.ListNewStages>

@{
    ViewBag.Title = "List";
}

<h2 id="listNewStages-page">Liste des stages qui ne sont pas encore approuvés</h2>
<div id="stages-count">@Model.Count() Stage(s)</div>
                     
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PublicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NbrStagiaire)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NbrStagiaire)
        </td>
        <td>
           @* @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
        </td>
    </tr>
}

</table>
