@using System.Web.Mvc.Html
@using Stagio.Web.Module.Strings.Shared;
@model Stagio.Web.ViewModels.Stage.ListAllStages

@{
    ViewBag.Title = "List";
}

<h2 id="listNewStages-page">Liste des stages <mark>à approuver</mark></h2> 
<div id="stages-count">@(Model.ListNewStages.Count() + Model.ListStagesAccepted.Count() + Model.ListStagesRefused.Count()) Stage(s)</div>
                     
<table class="table">
    <tr>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.ListNewStages[0].StageTitle)
        </th>
