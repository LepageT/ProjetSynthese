        <th>
            @Html.DisplayNameFor(model => model.StudentStageFound[0].FirstName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentStageFound[0].LastName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentStageFound[0].NbApply)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentStageFound[0].NbDateInterview)
        </th>
    </tr>

    @foreach (var item in Model.StudentStageFound)
    {
        if (item.NbDateInterview == 0)
        {
            <tr style="color: green">
                <td>
                    @Html.ActionLink(item.Matricule.ToString(), MVC.Coordinator.StudentApplyList(item.Id), new { id = "student-stages" + item.Id })

                </td>
                <td>
                    @Html.DisplayFor(model => item.FirstName)
                </td>

                <td>
                    @Html.DisplayFor(model => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.NbApply)
                </td>
                <td>
                    @Html.DisplayFor(model => item.NbDateInterview)
                </td>


            </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Matricule.ToString(), MVC.Coordinator.StudentApplyList(item.Id), new { id = "student-stages" + item.Id })

                </td>
                <td>
                    @Html.DisplayFor(model => item.FirstName)
                </td>

                <td>
                    @Html.DisplayFor(model => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.NbApply)
                </td>
                <td>
                    @Html.DisplayFor(model => item.NbDateInterview)
                </td>

            </tr>
        }
    }

</table>