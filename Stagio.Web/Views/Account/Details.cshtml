@using Stagio.Web.Module.Strings.Shared;
@model Stagio.Web.ViewModels.Account.Details

<!DOCTYPE html>

<html>
<head>

    <title>Details</title>
</head>
<body>
    <div>
        <h4 id="details-user-page">Profil</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Telephone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telephone)
            </dd>
            @if (Model.Poste != null)
            {

                <dt>
                    @Html.DisplayNameFor(model => model.Poste)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Poste)
                </dd>
            }

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

        </dl>
    </div>

    @if (@User.IsInRole("Étudiant"))
    {
        <div>
            @Html.ActionLink("Modifier mon profil", MVC.Student.Edit(), new { id = "edit-Student", @class="btnMenu btnMenu-default", @style="width:150px" })

        </div>
    } 
    @if (@User.IsInRole("Contact entreprise"))
    {
        <div>
            @Html.ActionLink("Modifier mon profil", MVC.ContactEnterprise.Edit(), new { id = "edit-enterprise", @class="btnMenu btnMenu-default", @style="width:150px" })
        </div>
    }
    <p>
        @Html.ActionLink(Navigation.ReturnHome, MVC.Home.Index())
    </p>
    @*@@if(@User.IsInRole("Coordonnateur"))
        {
            <div>
                @Html.ActionLink("Modifier le profil", MVC.Coordinator.Edit(Model.Id), new { id = "edit-coordonnateur" })
            </div>
        }*@


</body>
</html>
