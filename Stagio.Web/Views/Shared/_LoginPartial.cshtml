@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(@User.Identity.Name, MVC.Account.Details(), new { id = "details-user-page" })</li>
        <li>@Html.ActionLink("Se déconnecter", MVC.Account.Logout(), new { id = "logout-link" })</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Se connecter", MVC.Account.Login(), new { id = "login-link"})</li>
    </ul>
}