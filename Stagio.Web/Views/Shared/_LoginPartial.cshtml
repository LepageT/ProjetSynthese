@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(@User.Identity.Name, MVC.Home.Index())</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Se connecter", MVC.Account.Login(), new { id = "login-link" })</li>
    </ul>
}