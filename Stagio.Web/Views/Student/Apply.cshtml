@using System.Web.Mvc.Html
@model Stagio.Web.ViewModels.Student.Apply

@{
    ViewBag.Title = "Apply";
}

<h2 id="apply-page">Postuler</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        @Html.HiddenFor(model => model.IdStage)
        @Html.HiddenFor(model => model.IdStudent)

        <div class="form-group">
            @Html.LabelFor(model => model.Cv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cv)
                @Html.DisplayFor(model => model.Cv)
                @Html.ValidationMessageFor(model => model.Cv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Letter, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Letter)
                @Html.DisplayFor(model => model.Letter)
                @Html.ValidationMessageFor(model => model.Letter, "", new { @class = "text-danger" })
            </div>
        </div>

       


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="apply-button" value="Postuler" class="btn btn-default" />
            </div>
        </div>
    </div>
}