@using Stagio.Web.Module.Strings.Shared
@model IEnumerable<Stagio.Web.ViewModels.ContactEnterprise.Draft>

@{
    ViewBag.Title = "DraftList";
}

<h2>Brouillons</h2>

<table class="table newTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PublicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StageTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StageTitle)
            </td>
            <td style="text-align:right">
                @Html.ActionLink("Modifier", MVC.Stage.DraftEdit(item.Id), new { id = "edit-draft" + item.Id }) |
                @Html.ActionLink("Supprimer", MVC.Stage.DraftDelete(item.Id), new { id = "remove-draft" + item.Id })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink(Navigation.ReturnHome, MVC.ContactEnterprise.Index())
</div>
